<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    
   <bean id= "triangle" class = "org.sandeep.Triangle" autowire="constructor" >
   </bean>  
   
   <bean id= "a" class = "org.sandeep.Point">
   		<constructor-arg value="1" type="int"></constructor-arg>
   		<constructor-arg value="2" type="int"></constructor-arg>
   		<constructor-arg value="0" type="int"></constructor-arg>
   </bean>
   <bean id= "a2" class = "org.sandeep.Point">
   		<constructor-arg value="1" type="int"></constructor-arg>
   		<constructor-arg value="2" type="int"></constructor-arg>
   		<constructor-arg value="3" type="int"></constructor-arg>
   </bean> 
   <bean id= "a3" class = "org.sandeep.Point">
   		<constructor-arg value="1" type="int"></constructor-arg>
   		<constructor-arg value="2" type="int"></constructor-arg>
   		<constructor-arg value="4" type="int"></constructor-arg>
   </bean>  
</beans>   